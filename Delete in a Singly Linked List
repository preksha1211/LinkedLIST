{
    int data;
    Node next;

    Node(int d)
    {
        this.data = d;
        this.next = null;
    }
}
*/
class Solution {
       
    Node deleteNode(Node head, int x) {
        Node temp=head;
        if(x==1){
            
            head=head.next;
            temp.next=null;
            return head;
            
        }
       for(int i=0;i<x-2;i++){   //.....x-2 kyuki ek pehele rukhna h
           temp=temp.next;
          
           
       }
       Node del=temp.next;
       temp.next=temp.next.next;
       del.next=null;
       return head;
           
        
    }
}
